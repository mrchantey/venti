{
	"languages": {
		"Python": {
			"language_servers": ["basedpyright", "ruff"],
			"formatter": {
				"external": {
					"command": ".venv/bin/ruff",
					"arguments": ["format", "-"],
				},
			},
		},
	},
	"lsp": {
		"basedpyright": {
			"settings": {
				"python.pythonPath": ".venv/bin/python",
				"python.venvPath": ".",
				"python.analysis.extraPaths": [".venv/lib/python3.13/site-packages"],
				"python.analysis.stubPath": ".venv/lib/python3.13/site-packages",
				"basedpyright.analysis.extraPaths": [
					".venv/lib/python3.13/site-packages",
				],
				"basedpyright.analysis.stubPath": ".venv/lib/python3.13/site-packages",
			},
		},
	},
}
